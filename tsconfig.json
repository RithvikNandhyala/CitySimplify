{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",                    // ✅ ADD
    "moduleResolution": "nodenext",          // ✅ ADD
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["react", "react-native"],      // ✅ ADD
    "resolveJsonModule": true,               // ✅ ADD
    "esModuleInterop": true,                 // ✅ ADD
    "skipLibCheck": true                     // ✅ ADD
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
